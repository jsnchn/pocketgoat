package layouts

// SimpleLayout for pages that don't need authentication features
templ SimpleLayout(title string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			<link rel="stylesheet" href="/static/css/main.css"/>
		</head>
		<body>
			{ children... }
		</body>
	</html>
}