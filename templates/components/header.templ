package components

// Header component that combines brand and user menu in a navbar
templ Header() {
	<div class="navbar sticky top-0 bg-base-100 z-[10] border-b-1 border-base-300 shadow-lg">
		<div class="flex-1">
			<a href="/" class="flex flex-row gap-1 font-bold text-xl">
				<img src="/static/images/logo/32x32.png" alt="PocketGoat" width="32" height="32" />
				PocketGoat
			</a>
		</div>
		<div class="flex-none">
			@AuthMenu()
		</div>
	</div>
}
